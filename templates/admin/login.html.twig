{% extends "admin/base.html.twig" %}

{% block content %}
    <form class="bootstrap-form-with-validation" method="post" action="/admin/login">
        <h2>Login</h2>
        <p> </p>
        {% if accessDenied %}
	    	<h3 class="text-danger"><i class="glyphicon glyphicon-warning-sign"></i> Access denied!</h3>    	
	        <p> </p>
	    {% endif %}
        <div class="form-group">
            <label class="control-label" for="username">Username:</label>
            <input class="form-control" type="text" name="username" required="" maxlength="100" id="displayName">
        </div>
        <div class="form-group">
            <label class="control-label" for="password">Password:</label>
            <input class="form-control" type="password" name="password" required="" maxlength="50" id="password">
        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit">Ok </button><span> </span>
            <button class="btn btn-default" type="reset">Cancel</button>
        </div>
    </form>
{% endblock %}
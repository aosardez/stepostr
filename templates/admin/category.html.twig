{% extends "admin/base.html.twig" %}

{% block content %}
    <form class="bootstrap-form-with-validation" method="post" action="/admin/category-save">
        <h2>Category Details</h2>
        <p> </p>
        <input type="hidden" name="id" value="{{ category.getId() }}">
        <input type="hidden" name="dateCreated" value="{{ category.getDateCreated() }}">
        <div class="form-group">
            <label class="control-label" for="name">Name: </label>
            <input class="form-control" type="text" name="name" required maxlength="50" value="{{ category.getName() }}">
        </div>
        <div class="form-group">
            <label class="control-label">Slug: </label><span> </span>
            <label class="control-label">{{ category.getSlug() }}</label>
        </div>
        <div class="form-group">
            <label class="control-label" for="description">Description: </label>
            <textarea class="form-control" rows="15" name="description" required>{{ category.getDescription() }}</textarea>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label class="control-label">
                    <input type="checkbox" name="published"  {% if category.getPublished() %}checked{% endif %}><strong>Published</strong></label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Date Created: </label><span> </span>
            <label class="control-label">{{ contributor.getDateCreated()|date("F d, Y g:i A") }}</label>
        </div>
        <div class="form-group">
            <label class="control-label">Date Modified: </label><span> </span>
            <label class="control-label">{{ contributor.getDateModified()|date("F d, Y g:i A") }}</label>
        </div>
        <div class="form-group">
	        <button class="btn btn-default" type="submit">Save </button><span> </span>
	        <button class="btn btn-default" type="reset">Cancel </button>
        </div>
    </form>	
{% endblock %}
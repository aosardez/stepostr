{% extends "admin/base.html.twig" %}

{% block content %}
    <form class="bootstrap-form-with-validation">
        <h2>About Site</h2>
        <p> </p>
        <div class="form-group">
            <label class="control-label" for="body-input">Body Text:</label>
            <textarea class="form-control" rows="15" name="body-input" required>{{ about.getBody() }}</textarea>
        </div>
        <div class="form-group">
            <label class="control-label" for="text-input">Date Modified:</label>
            <p class="form-static-control">{{ about.getDateModified() }}</p>
            <p> </p>
        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit">Save </button><span> </span>
            <button class="btn btn-default" type="reset">Cancel</button>
        </div>
    </form>
{% endblock %}
{% extends "admin/base.html.twig" %}

{% block content %}
    <form class="bootstrap-form-with-validation" method="post" action="/admin/theme" enctype="multipart/form-data">
        <h2>Site Theme</h2>
        <p> </p>
        <div class="form-group">
            <label class="control-label" for="name">Theme:</label>
            <select class="form-control" name="name">
                <optgroup label="Select theme">
                    <option value="stepostr-light" {% if theme.getName() == "stepostr-light" %}selected{% endif %}>Stepostr Light</option>
                    <option value="stepostr-dark" {% if theme.getName() == "stepostr-dark" %}selected{% endif %}>Stepostr Dark</option>
                    <option value="minimalist-light" {% if theme.getName() == "minimalist-light" %}selected{% endif %}>Minimalist Light</option>
                    <option value="minimalist-dark" {% if theme.getName() == "minimalist-dark" %}selected{% endif %}>Minimalist Dark</option>
                </optgroup>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label" for="bannerImage">Banner Image:</label>
            <div class="checkbox">
                <label class="control-label">
                    <input type="checkbox" name="showBannerImage" {% if theme.getShowBannerImage() %}checked{% endif %}><strong>Display banner image</strong></label>
            </div>
            <p class="form-static-control"><strong>Path: </strong>{{ theme.getBannerImagePath() }}</p>
            <input type="file" name="bannerImage" accept="image/*">
        </div>
        <div class="form-group">
            <label class="control-label" for="backgroundImage">Background Image:</label>
            <div class="checkbox">
                <label class="control-label">
                    <input type="checkbox" name="showBackgroundImage" {% if theme.getShowBackgroundImage() %}checked{% endif %}><strong>Display background image</strong></label>
            </div>
            <p class="form-static-control"><strong>Path: </strong>{{ theme.getBackgroundImagePath() }}</p>
            <input type="file" name="backgroundImage" accept="image/*">
        </div>
        <div class="form-group">
            <label class="control-label" for="text">Date Modified:</label>
            <p class="form-static-control">{{ theme.getDateModified()|date("F d, Y g:i A") }}</p>
            <p> </p>
        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit">Save </button><span> </span>
            <button class="btn btn-default" type="reset">Cancel</button>
        </div>
    </form>
{% endblock %}
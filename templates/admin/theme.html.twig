{% extends "admin/base.html.twig" %}

{% block content %}
    <form class="bootstrap-form-with-validation">
        <h2>Site Theme</h2>
        <p> </p>
        <div class="form-group">
            <label class="control-label" for="name-input">Name:</label>
            <select class="form-control" name="name-input">
                <optgroup label="Select theme">
                    <option value="Stepostr Light" selected="">Stepostr Light</option>
                    <option value="Stepostr Dark">Stepostr Dark</option>
                    <option value="Minimalist Light">Minimalist Light</option>
                    <option value="Minimalist Dark">Minimalist Dark</option>
                </optgroup>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">Banner Image:</label>
            <div class="checkbox">
                <label class="control-label">
                    <input type="checkbox" name="bannerimage-change-input">Change</label>
            </div>
            <input type="file" name="bannerimage-file-input" disabled="">
        </div>
        <div class="form-group">
            <label class="control-label">Background Image:</label>
            <div class="checkbox">
                <label class="control-label">
                    <input type="checkbox" name="backgroundimage-change-input">Change</label>
            </div>
            <input type="file" name="backgroundimage-file-input" disabled="">
        </div>
        <div class="form-group">
            <label class="control-label" for="text-input">Date Modified:</label>
            <p class="form-static-control">{{ theme.getDateModified() }}</p>
            <p> </p>
        </div>
        <div class="form-group">
            <button class="btn btn-default" type="submit">Save </button><span> </span>
            <button class="btn btn-default" type="reset">Cancel</button>
        </div>
    </form>
{% endblock %}